<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivContactItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/birthday_image" />

    <TextView
        android:id="@+id/tvContactItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivContactItem"
        android:layout_toEndOf="@+id/ivContactItem"
        android:layout_toRightOf="@+id/ivContactItem"
        android:text="Yoni Sade"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/accent_material_light" />

    <TextView
        android:id="@+id/tvDateContactItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivContactItem"
        android:layout_alignLeft="@+id/tvContactItem"
        android:layout_alignStart="@+id/tvContactItem"
        android:text="22 Nissan"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/accent_material_dark" />

</RelativeLayout>